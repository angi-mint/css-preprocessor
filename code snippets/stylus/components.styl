// ASIDE
aside 

  background-color background-gray

  backdrop-filter blur(5px)

  width 390px

  padding 20px

  box-sizing border-box

  top 200px

  position relative


  ul 

    margin 0

    padding 0


    li 


      &:last-child a 

        border-bottom none

      

      a 

        text-decoration none

        color dhbw-gray

        display block

        padding 10px 0

        border-bottom 1px solid dhbw-gray


        &:hover 

          color dhbw-red



// TEASER
.teaser ul 

  display flex

  margin 50px 0 0 0

  padding 0

  width calc(100% + 40px)

  position relative

  left -20px


  li 

    width 50%

    margin 0 20px

    position relative

    overflow hidden


    img 

      width 100%

      vertical-align top

    

    .text 

      text-align center

      background background-gray

      position absolute

      top 100%

      left 0

      width 100%

      height 100%

      transition all 0.5s


      h2 

        margin-top 50px

      
    
    &:hover .text 

      top 0

      opacity 1



// Keyvisual
.keyvisual 

  background-image url(keyvisual.jpg)

  height 800px

  position relative


  &:after 

    content ""

    position absolute

    left 0

    bottom 0

    width 100%

    height 200px

    background linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 100%)

  

  .text 

    position absolute

    bottom 50px

    z-index 50


    *

      color accent-color

    

    h1 

      font-size 50px

      margin 20px 0

    

    h2 

      font-size 20px

      text-transform uppercase

